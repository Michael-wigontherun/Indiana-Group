@model Indiana.Models.LiquidatedCompanys

@{
    ViewData["Title"] = "Edit";
}
    <body style="background-image: url('Images/Indiana_Flag.png'); background-size: cover; background-position:center; background-attachment: fixed;">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6" style="background: rgba(211,211,211, 0.94); border-radius: 25px;">
                <h1 class="text-center">Edit</h1>

                <h4 class="text-center">Liquidated Companies</h4>
                <hr />
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Usdot" />
                    <div class="form-group">
                        <label asp-for="LegalName" class="control-label"></label>
                        <input asp-for="LegalName" class="form-control" />
                        <span asp-validation-for="LegalName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Dbaname" class="control-label"></label>
                        <input asp-for="Dbaname" class="form-control" />
                        <span asp-validation-for="Dbaname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Address" class="control-label"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Oosreason" class="control-label"></label>
                        <input asp-for="Oosreason" class="form-control" />
                        <span asp-validation-for="Oosreason" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Oosdate" class="control-label"></label>
                        <input asp-for="Oosdate" class="form-control" />
                        <span asp-validation-for="Oosdate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Status" class="control-label"></label>
                        <input asp-for="Status" class="form-control" />
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="GeoLocation" class="control-label"></label>
                        <input asp-for="GeoLocation" class="form-control" />
                        <span asp-validation-for="GeoLocation" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="addminID" class="control-label"></label>
                        <input asp-for="addminID" class="form-control" />
                        <span asp-validation-for="addminID" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
                <div class="text-center">
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
            <div class="col-md-3"></div>
        </div>
</body>
        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
